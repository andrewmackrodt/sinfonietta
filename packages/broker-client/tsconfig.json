{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@lib/common/*": ["../../common/src/*"]
    },
    "strict": true,
    "target": "es6"
  },
  "include": [
    "../common/src/**/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "../common/src/**/*.test.ts",
    "./src/**/*.test.ts"
  ]
}
