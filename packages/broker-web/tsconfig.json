{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2019"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@lib/broker-client/*": ["../broker-client/src/*"],
      "@lib/common/*": ["../common/src/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": [
    "../broker-client/src/**/*.ts",
    "../common/src/**/*.ts",
    "./**/*.ts",
    "./**/*.vue"
  ],
  "exclude": [
    "../broker-client/src/**/*.test.ts",
    "../common/src/**/*.test.ts",
    "./**/*.test.ts",
    "./**/*.test.vue"
  ]
}
